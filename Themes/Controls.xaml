<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MauiCalculator.Controls">

    <Style TargetType="controls:CalcButton">
        <Setter Property="FontSize"
                Value="22"/>
        <Setter Property="CornerRadius"
                Value="14"/>
        <Setter Property="BackgroundColor"
                Value="{DynamicResource ButtonBackground}"/>
        <Setter Property="TextColor"
                Value="{DynamicResource ButtonTextColor}"/>
    </Style>

    <Style x:Key="OperatorButtonStyle"
            TargetType="controls:CalcButton">
        <Setter Property="BackgroundColor"
                Value="{DynamicResource OperatorButtonBackground}"/>
        <Setter Property="TextColor"
                Value="White"/>
    </Style>

</ResourceDictionary>
